{
  "name": "mkver",
  "version": "4.1.0",
  "main": "./dist/mkver.js",
  "types": "./dist/mkver.d.ts",
  "description": "Node.js access to your app's version and release metadata",
  "scripts": {
    "fmt": "prettier --write .",
    "lint": "eslint --fix src/*.ts",
    "premake": "rimraf dist",
    "make": "tsc && chmod +x dist/mkver.js",
    "pretest": "npm run make && npm run lint",
    "test": "mocha dist/**/*.spec.js",
    "update": "run-p update:*",
    "update:ncu": "npm-check-updates --upgrade --install always",
    "install:pinact": "go install github.com/suzuki-shunsuke/pinact/cmd/pinact@latest",
    "update:pinact": "pinact run -u",
    "precommit": "run-s update fmt lint test",
    "docs:build": "typedoc",
    "release": "release-it"
  },
  "bin": {
    "mkver": "./dist/mkver.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/photostructure/mkver.git"
  },
  "keywords": [
    "version",
    "versioning",
    "build-metadata",
    "git-sha",
    "semver",
    "typescript",
    "esm",
    "commonjs",
    "cli-tool",
    "build-pipeline",
    "deployment",
    "code-generation",
    "nodejs",
    "electron"
  ],
  "author": "Matthew McEachen <matthew-mkver@photostructure.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/photostructure/mkver/issues"
  },
  "homepage": "https://github.com/photostructure/mkver#readme",
  "release-it": {
    "hooks": {
      "before:init": "npm test"
    },
    "src": {
      "tagName": "v%s",
      "commitArgs": "-S",
      "tagArgs": "-S"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    }
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.0",
    "@types/semver": "^7.7.1",
    "chai": "^6.0.1",
    "chai-as-promised": "^8.0.2",
    "eslint": "^9.35.0",
    "mocha": "^11.7.2",
    "npm-check-updates": "^18.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "release-it": "^19.0.4",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
